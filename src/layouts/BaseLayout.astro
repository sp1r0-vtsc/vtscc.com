---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

interface Props {
  title?: string;
  description: string;
  showBackground?: boolean;
}

const { 
  title = SITE_TITLE,
  description,
  showBackground = false
} = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="min-h-full flex flex-col bg-gray-50">
    {showBackground && (
      <div class="fixed inset-0 z-[-1]">
        <img 
          src="/mountain-vault.jpg" 
          alt="Background" 
          class="w-full h-full object-cover animate-fade"
        />
        <div class="absolute inset-0 bg-black/5 backdrop-blur-[2px]"></div>
      </div>
    )}
    
    <Header />
    
    <main class="flex-grow w-full">
      <div class="w-full py-6 sm:py-8 lg:py-12">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>