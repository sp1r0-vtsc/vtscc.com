---
interface Props {
  size?: 'narrow' | 'medium' | 'wide' | 'full';
  class?: string;
}

const { 
  size = 'medium',
  class: className = '' 
} = Astro.props;

const sizeClasses = {
  narrow: 'max-w-narrow px-4 sm:px-6 lg:px-8',
  medium: 'max-w-medium px-4 sm:px-6 lg:px-8',
  wide: 'max-w-wide px-4 sm:px-6 lg:px-8',
  full: 'w-full px-4 sm:px-6 lg:px-8'
};
---

<div class:list={[
  'mx-auto w-full',
  sizeClasses[size],
  className
]}>
  <slot />
</div>