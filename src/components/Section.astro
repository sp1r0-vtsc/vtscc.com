---
interface Props {
  class?: string;
  background?: boolean;
}

const { 
  class: className = '',
  background = false 
} = Astro.props;
---

<section class:list={[
  'w-full rounded-lg overflow-hidden',
  'py-6 sm:py-8 lg:py-12',
  background && 'bg-white/95 backdrop-blur-sm shadow-xl',
  className
]}>
  <div class="px-4 sm:px-6 lg:px-8">
    <slot />
  </div>
</section>