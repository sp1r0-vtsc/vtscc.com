---
import ProjectCard from './ProjectCard.astro';

interface App {
  title: string;
  url: string;
  description: string;
}

interface Props {
  apps: App[];
  title: string;
  description?: string;
}

const { apps, title, description } = Astro.props;
---

<section class="mb-8">
  <h2 class="text-2xl font-semibold mb-6">{title}</h2>
  {description && (
    <div class="bg-gray-50 p-6 rounded-lg mb-8">
      <p class="text-gray-700">{description}</p>
    </div>
  )}
  <div class="grid md:grid-cols-2 gap-8">
    {apps.map(app => (
      <ProjectCard {...app} />
    ))}
  </div>
</section>