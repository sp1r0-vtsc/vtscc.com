---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactCard from '../components/ContactCard.astro';
import { SITE_TITLE, COMPANY_EMAIL } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={`Contact - ${SITE_TITLE}`} 
			description="Contact Vermont Secure Computing Consultancy for secure computing solutions and consultations."
		/>
	</head>
	<body>
		<Header />
		<main class="px-4 py-12 max-w-4xl mx-auto">
			<h1 class="text-4xl font-bold mb-8">Contact Us</h1>
			<div class="prose prose-lg max-w-none">
				<ContactCard />
				<div class="mt-12 bg-gray-50 p-8 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4">General Inquiries</h2>
					<p class="text-gray-700">
						Please direct general inquiries to:<br />
						<span class="font-mono mt-2 block">{COMPANY_EMAIL}</span>
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>