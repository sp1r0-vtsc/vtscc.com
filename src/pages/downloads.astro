---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ToolCard from '../components/ToolCard.astro';
import { SITE_TITLE } from '../consts';

const tools = [
	{
		name: 'Bitaddress.org',
		description: 'Tool for creating and manipulating bitcoin addresses',
		url: 'bitaddress/index.html'
	},
	{
		name: 'Logaddress.org',
		description: 'Tool for creating and manipulating woodcoin addresses',
		url: 'logaddress/index.html'
	},
	{
		name: 'Coinb.in',
		description: 'Tool for creating bitcoin signatures, transactions, and wallet',
		url: 'coinb-in/index.html'
	},
	{
		name: 'Logb.in',
		description: 'Tool for creating woodcoin signatures, transactions, and wallet',
		url: 'logb-in/index.html'
	},
	{
		name: 'Signing Tool',
		description: 'Tool for creating and verifying bitcoin signatures',
		url: 'sign-verify/index.html'
	}
];

const githubLinks = [
	'lukassaul',
	'paulmadore',
	'robertstuff',
	'funkshelper',
	'sp1r0',
	'nkashdan',
	'orgs/Vermont-Secure-Computing/owners_team'
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={`Downloads - ${SITE_TITLE}`} 
			description="Download secure computing tools and resources from Vermont Secure Computing Consultancy."
		/>
	</head>
	<body>
		<Header />
		<main class="px-4 py-12 max-w-4xl mx-auto">
			<h1 class="text-4xl font-bold mb-8">Downloads</h1>

			<div class="mb-12">
				<h2 class="text-2xl font-semibold mb-4">GitHub Repositories</h2>
				<div class="flex flex-wrap gap-2">
					{githubLinks.map(link => (
						<a 
							href={`https://github.com/${link}`}
							target="_blank"
							class="inline-block px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full text-gray-700"
						>
							{link.split('/').pop()}
						</a>
					))}
				</div>
			</div>

			<div class="mb-12">
				<h2 class="text-2xl font-semibold mb-4">Tools</h2>
				<div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-8">
					<p class="text-yellow-700">
						The following tools are archived here for the people who requested them and are not intended 
						for public use. They are to be downloaded, verified, and run on an offline machine.
					</p>
				</div>
				<div class="grid gap-6">
					{tools.map(tool => (
						<ToolCard {...tool} />
					))}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>