---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SidePanel from '../components/SidePanel.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/animations.css';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <!-- Background Image -->
    <div class="fixed inset-0 z-[-1]">
      <img 
        src="/vtsc-background.jpg" 
        alt="Background" 
        class="w-full h-full object-cover animate-fade"
      />
      <div class="absolute inset-0 bg-black/5"></div>
    </div>

    <Header />
    <SidePanel />
    
    <main class="px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row items-center gap-8 mb-12">
          <img 
            src="/vtsc-background.jpg" 
            alt="VSCC Tree Logo" 
            class="w-48 md:w-64 animate-spiral"
          />
          <div>
            <h1 class="text-4xl font-bold mb-4">{SITE_TITLE}</h1>
            <h2 class="text-2xl text-gray-600 mb-8">Research Division</h2>
            
            <div class="prose prose-lg">
              <h3 class="text-xl font-semibold mb-4">Our Mission</h3>
              <p class="mb-4">
                VTSCC is a computing services and technology consultancy. Our engineers have vast 
                experience with building websites, apps, and managing secure computing and payment 
                interface systems.
              </p>
              <p class="mb-4">
                We perform security reviews and network investigations.
              </p>
              <p class="mb-8">
                Contact us for a free consultation to see how we can help your business or organization.
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>