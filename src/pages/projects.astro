---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import Section from '../components/Section.astro';
import DeFiAppSection from '../components/DeFiAppSection.astro';
import SecurityToolsSection from '../components/SecurityToolsSection.astro';
import SecurityTips from '../components/SecurityTips.astro';
import { SITE_TITLE } from '../consts';

const defiApps = [
  {
    title: 'Uniswap',
    url: 'https://uniswap.org',
    description: 'The gold standard of decentralized exchanges. Uniswap pioneered automated market making and continues to lead DeFi innovation with its simple, secure interface.'
  },
  {
    title: 'Jupiter (JUP)',
    url: 'https://jup.ag',
    description: 'The most efficient DEX aggregator on Solana, providing the best routes and prices across multiple exchanges while maintaining an incredibly user-friendly experience.'
  },
  {
    title: 'Beefy Finance',
    url: 'https://app.beefy.com',
    description: 'A multi-chain yield optimizer that automates compound farming, maximizing returns while minimizing fees and complexity. Perfect for passive DeFi earnings.'
  },
  {
    title: 'Raydium',
    url: 'https://raydium.io',
    description: 'Premier AMM and liquidity provider on Solana, offering lightning-fast trades with minimal fees. Features an intuitive interface that makes DeFi accessible.'
  }
];

const securityTools = [
  {
    title: 'MetaMask',
    url: 'https://metamask.io',
    description: 'Essential Web3 wallet for Ethereum and EVM chains. Carefully review permissions and always verify transaction details.'
  },
  {
    title: 'Phantom',
    url: 'https://phantom.app',
    description: 'Secure and user-friendly Solana wallet. Features built-in NFT support and seamless DApp connections.'
  },
  {
    title: 'Rabby Wallet',
    url: 'https://rabby.io',
    description: 'Enhanced security features for DeFi users, including detailed transaction analysis and phishing protection.'
  }
];

const browserPlugins = [
  {
    title: 'uBlock Origin',
    url: 'https://ublockorigin.com/',
    description: 'Essential content blocker that helps prevent crypto-jacking and malicious scripts'
  },
  {
    title: 'EtherAddressLookup',
    url: 'https://chrome.google.com/webstore/detail/etheraddresslookup/pdknmigbbbhmllnmgdfalmedcmcefdfn',
    description: 'Protects against phishing by maintaining a verified list of cryptocurrency addresses'
  },
  {
    title: 'MetaMask Phishing Detection',
    url: 'https://metamask.io/security/',
    description: 'Built-in protection against known scam sites and suspicious smart contracts'
  }
];

const securityTips = [
  'Always verify smart contract addresses',
  'Use hardware wallets for large holdings',
  'Never share your private keys or seed phrases',
  'Start with small amounts when trying new protocols'
];
---

<BaseLayout 
  title={`Green Mountain dApps - ${SITE_TITLE}`} 
  description="Curated collection of secure and user-friendly DeFi applications and essential security tools"
  showBackground={true}
>
  <Container size="wide">
    <Section background={true}>
      <div class="mb-12">
        <h1 class="text-4xl font-bold mb-4">Green Mountain dApps</h1>
        <p class="text-xl text-gray-600">
          We believe DeFi shouldn't be difficult. Here's our curated collection of trusted decentralized 
          applications and security tools that prioritize both user experience and safety.
        </p>
      </div>

      <DeFiAppSection 
        title="Featured DeFi Applications"
        apps={defiApps}
      />

      <SecurityToolsSection 
        title="Essential Web3 Wallets"
        description="Secure wallets are your gateway to DeFi. We recommend these trusted options for their balance of security features and ease of use."
        tools={securityTools}
      />

      <SecurityToolsSection 
        title="Recommended Security Extensions"
        description="Enhanced protection while navigating Web3. These browser extensions add essential security layers to your DeFi interactions."
        tools={browserPlugins}
      />

      <SecurityTips tips={securityTips} />
    </Section>
  </Container>
</BaseLayout>